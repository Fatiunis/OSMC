pipeline {
    agent any
    environment {
        SONAR_TOKEN = credentials('sonar-token')
        ENV_FILE = ".env.dev"
        PROJECT_NAME = "hospital_dev"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('SonarQube Analysis & Quality Gate') {
            steps {
                script {
                    def scannerHome = tool 'SonarScanner'
                    
                    // CORRECCIÓN 1: Se debe esperar el Quality Gate DE CADA análisis por separado.
                    // Si lanzas los dos juntos y luego un solo waitForQualityGate, Jenkins solo verificará el último.
                    
                    // Análisis FrontEnd
                    withSonarQubeEnv('SonarQubeServer') {
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=HOSPITAL_FE_DEV -Dsonar.sources=HOSPITAL_SYSTEM_REACT/src"
                    }
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                    
                    // Análisis BackEnd
                    withSonarQubeEnv('SonarQubeServer') {
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=HOSPITAL_BE_DEV -Dsonar.sources=sistema_adfs"
                    }
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }

        stage('Deployment - DEV') {
            steps {
                script {
                    // CORRECCIÓN 2: Inyectar el archivo .env.dev desde credenciales
                    // Sin esto, Docker fallará porque no encontrará el archivo en el workspace.
                    withCredentials([file(credentialsId: 'dev-env-file', variable: 'DEV_ENV_SECRET')]) {
                        sh "cp \$DEV_ENV_SECRET ${ENV_FILE}"
                        sh "docker compose -p ${PROJECT_NAME} --env-file ${ENV_FILE} up -d --build"
                    }
                }
            }
        }
    }
    post {
        failure {
            mail to: 'catedratico@ejemplo.edu, fplopez@unis.edu.gt',
                 subject: "❌ Pipeline Fallido: Ambiente DEV",
                 body: "El despliegue o la revisión de SonarQube falló. Revisar en: ${env.BUILD_URL}"
        }
        success {
            mail to: 'catedratico@ejemplo.edu, fplopez@unis.edu.gt',
                 subject: "✅ Pipeline Exitoso: Ambiente DEV",
                 body: "El ambiente DEV ha sido actualizado correctamente."
        }
    }
}
